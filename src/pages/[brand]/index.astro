---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allLyrics = await getCollection('lyrics');
  const brands = [...new Set(allLyrics.map(entry => entry.data.brand))];
  
  return brands.map(brand => {
    const brandSongs = allLyrics.filter(entry => entry.data.brand === brand);
    return {
      params: { brand: brand.toLowerCase().replace(/\s+/g, '-') },
      props: { brandName: brand, songs: brandSongs }
    };
  });
}

const { brandName, songs } = Astro.props;

// Group songs by team
const songsByTeam = songs.reduce((acc, song) => {
  const team = song.data.team || "Other";
  if (!acc[team]) acc[team] = [];
  acc[team].push(song);
  return acc;
}, {});

const themeColor = songs[0]?.data.themeColor || "#ffffff";
---

<BaseLayout title={`${brandName} - iDOLM@STER Lyrics`} themeColor={themeColor}>
  <div class="fixed inset-0 -z-10 bg-[#0a0508]">
    <div class="absolute inset-0 bg-gradient-to-br from-black via-[#0a0508] to-[#1a1015]"></div>
    <div class="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
  </div>

  <main class="max-w-7xl mx-auto px-6 py-24 min-h-screen">
    <header class="mb-24 text-center relative">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[15vw] font-black text-white/[0.03] whitespace-nowrap select-none pointer-events-none uppercase tracking-tighter mix-blend-overlay">
        {brandName}
      </div>
      <h1 class="text-6xl md:text-8xl font-black tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-white to-white/60 relative z-10 font-cinzel">
        {brandName}
      </h1>
      <div class="w-24 h-1 bg-gradient-to-r from-transparent via-white/50 to-transparent mx-auto mt-8"></div>
    </header>

    <div class="space-y-32">
      {Object.entries(songsByTeam).map(([team, teamSongs]) => (
        <section>
          <div class="flex items-center gap-6 mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white/90 tracking-widest uppercase font-serif border-l-4 border-[var(--theme)] pl-6" style={`--theme: ${teamSongs[0].data.themeColor}`}>
              {team}
            </h2>
            <div class="h-px flex-1 bg-gradient-to-r from-white/10 to-transparent"></div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {teamSongs.map(song => {
              const segments = song.id.split('/');
              const brandSlug = segments[0];
              const teamSlug = segments[1] || 'other';
              const songSlug = segments[2]?.replace('.md', '') || song.id.replace('.md', '');
              
              return (
                <a href={`/${brandSlug}/${teamSlug}/${songSlug}`} 
                   class="group relative aspect-[3/4] block overflow-hidden rounded-2xl bg-white/5 border border-white/10 hover:border-white/30 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:shadow-[var(--shadow)]"
                   style={`--shadow: ${song.data.themeColor}44`}>
                  
                  <div class="absolute inset-0">
                    <img 
                      src={song.data.cover} 
                      alt={song.data.title} 
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-60 group-hover:opacity-100"
                      transition:name={`cover-${song.id}`}
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-90 group-hover:opacity-60 transition-opacity duration-500"></div>
                  </div>

                  <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                    <p class="text-xs font-bold tracking-widest text-[var(--accent)] mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100 uppercase" style={`--accent: ${song.data.themeColor}`}>
                      {song.data.layoutType}
                    </p>
                    <h3 class="text-2xl font-bold text-white leading-tight font-serif group-hover:text-[var(--accent)] transition-colors duration-300" style={`--accent: ${song.data.themeColor}`}>
                      {song.data.title}
                    </h3>
                  </div>
                </a>
              );
            })}
          </div>
        </section>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;900&family=Noto+Serif+JP:wght@400;700&display=swap');
  .font-cinzel { font-family: 'Cinzel', serif; }
  .font-serif { font-family: 'Noto Serif JP', serif; }
</style>
